@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewPettyCashVM>;




<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Cash Till</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddPettyCash" data-bs-url="@Url.Action("AddPettyCash")"><i class="fa fa-fw fa-plus-circle"></i>Add Petty Cash</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="dataTables_wrapper" id="dtPetty">
        
                <thead>
                    <tr>
                       
                            <th>Date</th>
                    <th>From</th>
                    <th>To</th>
               
                    <th>Purpose/Reference</th>
                 
                    <th>Amount</th>
                    <th>Recipient</th>
                    <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var petty in Model)
                {
                    <tr>
                        
                          <td>@petty.PettyCashId</td>
                        <td> </td>

                        <td></td>
                        <td></td>
                           <td>
                            <div class="text-center">
                                <a asp-action="DetailPettyCash" asp-controller="Document" asp-route-Id="@petty.PettyCashId" class="btn btn-sm btn-primary  btn-circle"><i class="fa fa-sm fa-info text-white"></i></a>
                                <a asp-action="EditPettyCash" asp-controller="Document" asp-route-Id="@petty.PettyCashId" class="btn  btn-sm btn-warning btn-circle"><i class="fa fa-sm fa-edit text-white"></i></a>
                                <a asp-action="CommentPettyCash" asp-controller="Document" asp-route-Id="@petty.PettyCashId" class="btn btn-sm btn-circle btn-secondary"><i class="fa fa-sm fa-comments text-white"></i></a>
                                <a asp-action="Download" asp-controller="Document" type="submit" asp-route-Id="@petty.PettyCashId" class="btn btn-sm btn-dark btn-circle"><i class="fa fa-sm fa-cloud-download-alt text-white"></i></a>
                                <a asp-action="Card" asp-controller="Document" asp-route-Id="@petty.PettyCashId" class="btn btn-sm btn-success btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                                <a asp-action="UpdatePettyCash" asp-controller="Document" asp-route-Id="@petty.PettyCashId" class="btn btn-sm btn-circle btn-danger"><i class="fa fa-sm fa-trash text-white"></i></a>
                            </div>

                        </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>
