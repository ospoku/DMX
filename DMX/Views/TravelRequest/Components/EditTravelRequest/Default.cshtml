
@model DMX.ViewModels.EditTravelRequestVM;

<div class="modal fade" id="EditTravelRequest" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Edit Travel Request</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">


                <div class="did-floating-label-content">
                    <select id="selectTravelType1" type="select" asp-for="@Model.TravelTypeId" asp-items="@Model.TravelTypes" class="did-floating-select" placeholder=""></select>
                    <label class="did-floating-label">Select Travel Type</label>
                </div>
                <div class="did-floating-label-content">
                    <input type="text" asp-for="@Model.Purpose" class="did-floating-input" placeholder="" required />
                    <label class="did-floating-label">Purpose</label>
                </div>

                @foreach (var mode in Model.TransportModes)
                {
                    <label class=" btn btn-sm btn-outline-primary">
                        <input type="radio" asp-for="@Model.TransportModeId" class="option-input radio" value="@mode.Value" id="Mode@(mode)" />
                        @mode.Text
                    </label>
                }


                <div class="row">
                    <div class="col">
                        <div class="did-floating-label-content">


                            <input type="date" asp-for="@Model.StartDate" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}" required />
                            <label class="did-floating-label">Start Date</label>

                        </div>
                    </div>
                    <div class="col">

                        <div class="did-floating-label-content">


                            <input type="date" asp-for="@Model.EndDate" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}" required />
                            <label class="did-floating-label">End Date</label>

                        </div>
                    </div>
                    <div class="col">
                        <div class="did-floating-label-content">
                            <input type="date" asp-for="@Model.DateofReturn" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}" required />
                            <label class="did-floating-label">Date of Return</label>

                        </div>
                    </div>

                </div>



                <div class="row">
                    <div class="col">
                        <div class="did-floating-label-content">


                            <input type="number" step="0.0001" asp-for="@Model.ConferenceFee" class="did-floating-input" required />
                            <label class="did-floating-label">Seminar/Conference Fees</label>

                        </div>
                    </div>
                    <div class="col">

                        <div class="did-floating-label-content">


                            <input type="number" step="0.0001" asp-for="@Model.FuelClaim" class="did-floating-input" required />
                            <label class="did-floating-label">Fuel Claim</label>

                        </div>
                    </div>
                    <div class="col">
                        <div class="did-floating-label-content">
                            <input type="number" step="0.0001" asp-for="@Model.OtherExpenses" class="did-floating-input" required />
                            <label class="did-floating-label">Other Expenses</label>

                        </div>
                    </div>

                </div>



                <div class="did-floating-label-content">

                    <input class="did-floating-input" asp-for="@Model.AdditionalNotes" type="text" placeholder="" required />
                    <label class="did-floating-label">AdditionalNotes</label>
                </div>

                <div class="did-floating-label-content">
                   @*  <select id="selectUserTravelRequest" class="did-floating-select" type="select" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers"></select> *@
                    <label class="did-floating-label">Select Approver(s)</label>
                </div>


                <button id="btnAddTravelRequest" class="btn btn-block btn-primary">Save</button>


            </div>

            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
     const addTravelRequestFormSelector = '#addTravelRequestForm';
        $('#selectUserTravelRequest').select2({ dropdownParent: $('#AddTravelRequest') });
        $('#selectTravelType1').select2({ dropdownParent: $('#AddTravelRequest') });
          $('#selectTravelType2').select2({ dropdownParent: $('#AddTravelRequest') });
        $('#selectDept').select2({ dropdownParent: $('#AddTravelRequest') });
         document.getElementById("btnAddTravelRequest").addEventListener("click", function (event) {
            event.preventDefault();

            const form = document.querySelector(addTravelRequestFormSelector);
                 if (!form.checkValidity()) {
                form.reportValidity(); // Display browser validation messages
                return; // Stop further execution if validation fails
            }

            // Validate fields

            // Show error if invalid


            // Confirm save
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you really want to save this record?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, save it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });

</script>



