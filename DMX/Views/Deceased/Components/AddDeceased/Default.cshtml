
@model DMX.ViewModels.AddDeceasedVM;


<dialog id="AddDeceasedDialog" class="border-0 rounded py-0 col-md-4">

            <div class="modal-header">

                <h6>Add Deceased</h6>
        <button type="button" aria-label="Close" class="btn btn-sm btn-outline-danger" onclick="document.getElementById('AddDeceasedDialog').close()">Close</button>
            </div>

             @using (Html.BeginForm("AddDeceased", "Deceased", FormMethod.Post, new { enctype = "multipart/form-data", id="addDeceasedForm"}))
            {
                <div class="modal-body">
                    
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.DeceasedName" class="did-floating-input" placeholder="" required/>
                        <label class="did-floating-label">Deceased</label>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="did-floating-label-content">
                                <input type="text" asp-for="@Model.FolderNo" class="did-floating-input" placeholder="" required/>
                                <label class="did-floating-label">Folder No</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="did-floating-label-content">
                                <input type="text" asp-for="@Model.TagNo" class="did-floating-input" placeholder="" required/>
                                <label class="did-floating-label">Tag No</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="btn-group-sm">
                         @foreach(var dead in @Model.DeceasedTypes)
                         {
                               
                                <label class=" btn btn-sm btn-outline-primary">

                                    <input type="radio" asp-for="@Model.DeceasedTypeId"  class="option-input radio" value="@dead.Value" id="Dead@(dead)"  required/>
                                    @dead.Text
                                </label>

                         }
                  
                            </div>

                        </div>

                    </div>
                  
                        <div class="did-floating-label-content">
                        <input class="did-floating-input vh-15" asp-for="@Model.Diagnoses" placeholder="" required/>
                            <label class="did-floating-label">Final Diagnoses</label>
                 
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.WardInCharge" class="did-floating-input" placeholder="" required />
                        <label class="did-floating-label">In-Charge</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Depositor" class="did-floating-input" placeholder="" required>
                        <label class="did-floating-label">Depositor</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" title="xxxxxxxxxx"  asp-for="@Model.DepositorAddress" class="did-floating-input" placeholder="" required>
                        <label class="did-floating-label">Depositor Address</label>
                    </div>

                    <div class="form-group">
                        <fieldset class="fieldset">
                            <legend class="legend">Select Category</legend>
                            @for (int i = 0; i < Model.MorgueServices.Count(); i++)
                            {
                                <div class="custom-checkbox">
                                    <input id="chk@(i)" type="checkbox" title="@Model.MorgueServices[i].Description"  asp-for="@Model.MorgueServices[i].IsChecked" class="custom-checkbox" />
                                    <label for="chk@(i)">@Model.MorgueServices[i].Name  - GHC @Model.MorgueServices[i].Amount</label>
                                    <input type="hidden" asp-for="@Model.MorgueServices[i].Id" />
                                </div>
                            }
                        </fieldset>
                    </div>
                        <div class="did-floating-label-content">
                        <select id="selectPatientUser"  class="did-floating-select" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers"></select>
                        <label class="did-floating-label">Select Users</label>
                    </div>
                </div>


                <div class="modal-footer">
                    <button id="btnAddDeceased" class="btn btn-block btn-primary">Save</button></div>
            }
        

</dialog>


    
