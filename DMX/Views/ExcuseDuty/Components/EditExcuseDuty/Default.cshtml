
@model DMX.ViewModels.EditExcuseDutyVM;


<div class="modal fade" id="EditExcuseDuty" data-bs-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Edit Excuse Duty </h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditExcuseDuty","Document",FormMethod.Post))
                {
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Name" class="did-floating-input" placeholder="" />
                        <label class="did-floating-label">Name</label>
                    </div>
                    <div class="did-floating-label-content">

                        <input type="date" asp-for="@Model.Date" class="did-floating-input" />

                        <label class="did-floating-label">Date</label>
                    </div>
                    <div class="did-floating-label-content">
                        <textarea type="text" class="did-floating-input" asp-for="@Model.Diagnosis" placeholder="Diagnosis"></textarea>


                    </div>
                    <div class="did-floating-label-content">

                        <input type="date" asp-for="@Model.DateofDischarge" class="did-floating-input" />

                        <label class="did-floating-label">Date of Discharge</label>

                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" class="did-floating-input" asp-for="@Model.ExcuseDays" placeholder="" />
                        <label class="did-floating-label">Excuse Days</label>
                    </div>

                    <div class="did-floating-label-content">
                        <select id="usersEditExcuseDuty" type="select" class="did-floating-select" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" placeholder="" required></select>
                        <label class="did-floating-label"> Select Users</label>
                    </div>


                    <div class="form-group">
                        <button class="btn btn-block btn-primary">Update</button>
                    </div>
                }
                </div>
                </div>
                </div>
                </div>
