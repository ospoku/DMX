
@model DMX.ViewModels.AddPettyCashVM;
@inject DMX.Models.PettyCashLimit limit;

<div class="modal fade" id="AddPettyCash" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Petty Cash</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">

            @using (Html.BeginForm("AddPettyCash", "PettyCash", FormMethod.Post))
            { 
                       <div class="did-floating-label-content">
                        <input type="date" asp-for="@Model.Date" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}"/>
                            <label class="did-floating-label">Date</label>
                    </div>

                
                    <div class="did-floating-label-content">
                        <input type="number" asp-for="@Model.Amount" class="did-floating-input"/> @* max="@Model.Maximum" *@
                        <label class="did-floating-label">Amount</label>
                    </div>
                        <div class="did-floating-label-content">
                            <input type="text" asp-for="@Model.Purpose"  class="did-floating-input" placeholder=""/>
                            <label class="did-floating-label">Purpose</label>
                        </div>
            
                    <div class="form-group">
                        <div class="did-floating-label-content">
                        <select id="selectPettyCashUser" class="did-floating-select" style="width:100%"  asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers"></select>
                            <label class="did-floating-label">Select Approver(s)</label>
                        </div>
                        </div>
                        <button class="btn btn-block btn-primary">Save</button>       
            }


        </div>
    </div>
</div>
</div>
    <script>
        $(document).ready(function () {


            $('#selectPettyCashUser').select2({
                dropdownParent: $('#AddPettyCash')
            });

        });
        </script>