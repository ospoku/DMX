@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewLeavesVM>;



<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Leave</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddLeave" data-bs-url="@Url.Action("AddLeave")"><i class="fa fa-fw fa-plus-circle"></i>Add Leave</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="dataTables_wrapper">
            
                <thead>
                    <tr>
                       
                   <th>Name</th>
                    <th>Rank</th>
                    <th>Department</th>
                    <th>Hometown</th>
                    <th>L.Application</th>
                    <th>Days</th>
                    <th>Departure</th>
                    <th>Phone</th>
                    <th>Signature</th>
                    <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var leave in Model)
                {
                    <tr>
                        
                          <td>@leave.LeaveId</td>
                        <td> @leave.LeaveId</td>

                        <td>@leave.LeaveId</td>
                        <td>@leave.LeaveId</td>
                           <td>
                            <div class="text-center">
                                <a asp-action="DetailLeave" asp-controller="Document" asp-route-Id="@leave.LeaveId" class="btn btn-sm btn-primary  btn-circle"><i class="fa fa-sm fa-info text-white"></i></a>
                                <a asp-action="EditLeave" asp-controller="Document" asp-route-Id="@leave.LeaveId" class="btn  btn-sm btn-warning btn-circle"><i class="fa fa-sm fa-edit text-white"></i></a>
                                <a asp-action="CommentLeave" asp-controller="Document" asp-route-Id="@leave.LeaveId" class="btn btn-sm btn-circle btn-secondary"><i class="fa fa-sm fa-comments text-white"></i></a>
                                <a asp-action="Download" asp-controller="Document" type="submit" asp-route-Id="@leave.LeaveId" class="btn btn-sm btn-dark btn-circle"><i class="fa fa-sm fa-cloud-download-alt text-white"></i></a>
                                <a asp-action="Card" asp-controller="Document" asp-route-Id="@leave.LeaveId" class="btn btn-sm btn-success btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                                <a asp-action="UpdateLeave" asp-controller="Document" asp-route-Id="@leave.LeaveId" class="btn btn-sm btn-circle btn-danger"><i class="fa fa-sm fa-trash text-white"></i></a>
                            </div>

                        </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>
