
@model DMX.ViewModels.DetailExcuseDutyVM;

<div class="modal fade" id="DetailExcuseDuty" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Detail </h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">

                          
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text">Reference Number</span></div>
                                            <input type="text" asp-for="@Model.Name" class="form-control"  readonly />

                                        </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text">Document Source</span></div>
                                                <input type="text" asp-for="@Model.Date" class="form-control"  readonly/>
                                            </div>

                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text">Receipt Date</span></div>
                                                <input  value="@Model.DateofDischarge" class="form-control" readonly>

                                            </div>
                                            </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text">Document Date</span></div>
                                                <input value="@Model.Date.ToString("dd/MM/yyyy")" class="form-control"  readonly />

                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <select   type="text"  class="select2 form-control" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" multiple="multiple"></select>

                                            </div>

                                            <div class="form-group">
                                                <textarea class=" tinymce form-control" asp-for="@Model.OperationDiagnosis" type="text" placeholder="Additional Information" readonly></textarea>


                                            </div>

                                            <a class="btn btn-block btn-primary" asp-action="ViewDocuments" asp-controller="Document">Return</a>

                                        </div>
            </div>
        </div> 
 </div>
            
