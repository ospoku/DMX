

@model IEnumerable<DMX.ViewModels.ViewUserRolesVM>

@inject Microsoft.AspNetCore.DataProtection.IDataProtectionProvider DataProtectionProvider
@using Microsoft.AspNetCore.DataProtection
@{
    // Optional: create protector in view (same purpose string)
    var protector = DataProtectionProvider.CreateProtector("IdProtector");
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">User Role(s)</h6>

       @*  <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddUserRole" data-bs-url="@Url.Action("AddUserRole")"><i class="fa fa-fw fa-plus-circle"></i>Add User Role(s)</button>
 *@
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table dataTables_wrapper" id="dtUserRoles">
                        <thead>
                            <tr>

                            <tr>
                                <th>SN</th>
                                <th>Name</th>
                                
                                <th>Role(s)</th>
                                
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@user.Name</td>
                                <td>
                                    @foreach(var rol in user.Roles)
                                {
                                  <span class="badge badge-dark">  @rol</span>
                                }
                            </td>
                                    <td>

                                        <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                            <div class="btn-group" role="group">
                                          
                                        <button type="button" class="btn btn-outline-warning"><i  class=" fa fa-user-edit"></i></button>
                                        <button type="button" class="btn btn-warning"><i  class=" fa fa-file-edit"></i></button>

                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
        </div>
    </div>
    <div class="card-footer"></div>
    </div>
