
@model DMX.ViewModels.AddMeetingVM;

<div class="modal fade" id="AddMeeting" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Meeting</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
             @using (Html.BeginForm("AddMeeting", "Training", FormMethod.Post))
            {
            <div class="modal-body">

           


                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Name" class="did-floating-input" placeholder=""/>
                        <label class="did-floating-label">Meeting Name</label>
                    </div>

                    <div class="did-floating-label-content">
                        <input type="date" asp-for="@Model.Date"  class="did-floating-input" placeholder="" asp-format="{0:dd/MMMM/yyyy}"/>
                        <label class="did-floating-label">Meeting Date</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Description" class="did-floating-input" placeholder="" required />
                        <label class="did-floating-label">Meeting Description</label>
                    </div>




                </div>
                    <div class="modal-footer"><button class="btn btn-block btn-primary">Save</button></div>
                }
            </div>
    </div>
</div>

    
