
@model DMX.ViewModels.AddFeeStructureVM

<div class="slide-fee-panel" id="feePanel">
    <div class="card">

        
            <div class="card-header">

                <h6 class="d-inline">Add Fee Structure</h6>
                <button id="closeFeePanel" type="button" name="nCloseFeePanel"  class="d-line btn btn-sm btn-outline-danger fa-pull-right">X</button>
            </div>
             @using (Html.BeginForm("AddFeeStructure", "Settings", FormMethod.Post))
            {
            <div class="card-body">
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Name" id="txtAddDeptName" name="txtAddDeptName" class="did-floating-input" placeholder="" />
                        <label class="did-floating-label" for="txtAddDeptName">Name</label>
                    </div>

                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Min"id="txtAddDeptCode" name="txtAddDeptCode" class="did-floating-input" placeholder="" />
                        <label class="did-floating-label" for="txtAddDeptCode">Code</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Max" id="txtAddDeptDescription" name="txtAddDeptDescription" class="did-floating-input" placeholder=""/>
                        <label class="did-floating-label" for="txtAddDeptDescription">Description</label>
                    </div>
                     <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Fee" id="txtAddDeptDescription" name="txtAddDeptDescription" class="did-floating-input" placeholder=""/>
                        <label class="did-floating-label" for="txtAddDeptDescription">Description</label>
                    </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-block btn-primary">Save</button>
                        </div>
                }
            </div>
    </div>


   
