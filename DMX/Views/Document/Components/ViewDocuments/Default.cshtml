@{


    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewDocumentsVM>;


<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Clients</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddMemo" data-bs-url="@Url.Action("AddMemo")"><i class="fa fa-fw fa-plus-circle"></i>Add Memo</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="dataTables_wrapper" id="dtMemo">
            <table class="table" id="dataTable">
                <thead>
                    <tr>
                       
                        <th>Reference Number</th>
                        <th>Document Source</th>
                        <th>Receipt Date</th>  
                        <th>Document Date</th>   
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var Document in Model)
                {
                    <tr>
                        
                          <td>@Document.ReferenceNumber</td>
                        <td> @Document.DocumentSource</td>

                        <td>@Document.ReceiptDate.ToString("yyyy-MMM-dd")</td>
                        <td>@Document.DocumentDate.ToString("yyyy-MMM-dd")</td>
                           <td>
                            <div class="text-center">
                                <a asp-action="DetailDocument" asp-controller="Document" asp-route-Id="@Document.DocumentId" class="btn btn-sm btn-primary  btn-circle"><i class="fa fa-sm fa-info text-white"></i></a>
                                <a asp-action="EditDocument" asp-controller="Document" asp-route-Id="@Document.DocumentId" class="btn  btn-sm btn-warning btn-circle"><i class="fa fa-sm fa-edit text-white"></i></a>
                                <a asp-action="CommentDocument" asp-controller="Document" asp-route-Id="@Document.DocumentId" class="btn btn-sm btn-circle btn-secondary"><i class="fa fa-sm fa-comments text-white"></i></a>
                                <a asp-action="Download" asp-controller="Document" type="submit" asp-route-Id="@Document.DocumentId" class="btn btn-sm btn-dark btn-circle"><i class="fa fa-sm fa-cloud-download text-white"></i></a>
                                <a asp-action="PrintDocument" asp-controller="Document" asp-route-Id="@Document.DocumentId" class="btn btn-sm btn-success btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                                <a asp-action="UpdateMemo" asp-controller="Document" asp-route-Id="@Document.DocumentId" class="btn btn-sm btn-circle btn-danger"><i class="fa fa-sm fa-trash text-white"></i></a>
                            </div>

                        </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
</div>
