
@model DMX.ViewModels.AddFeeStructureVM

<div class="slide-panel" data-panel="feePanel" id="feePanel">
    <div class="card">

        
            <div class="card-header">

                <h6 class="d-inline">Add Fee Structure</h6>
                <button id="closeFeePanel" type="button" name="nCloseFeePanel" data-close="feePanel"  class="d-line btn btn-sm btn-outline-danger fa-pull-right">X</button>
            </div>
             @using (Html.BeginForm("AddFeeStructure", "Settings", FormMethod.Post))
            {
            <div class="card-body">
                    <div class="floating-group">
                        <input type="text" asp-for="@Model.Name" id="txtAddFeeName"   placeholder="" />
                        <label  for="txtAddFeeName">Name</label>
                    </div>
                <div class="floating-group">
                    <select  asp-for="@Model.DeceasedTypeId" id="selDeceasedType" class="did-floating-select"  asp-items="Model.DeceasedTypes"></select>
                    <label >Deceased Type</label>
                </div>

                <div class="floating-group">
                        <input type="number" asp-for="@Model.Min"id="txtAddMin"  min="1"  placeholder="" />
                        <label  for="txtAddMin">Minimum Day(s)</label>
                    </div>
                    <div class="floating-group">
                        <input type="number" asp-for="@Model.Max" id="txtAddMax"   placeholder=""/>
                        <label  for="txtAddMax">Maximum Days</label>
                    </div>
                     <div class="floating-group">
                    <input type="number" step="0.0001" asp-for="@Model.Fee" id="txtAddFee"  placeholder="" />
                        <label  for="txtAddFee">Amount</label>
                    </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-block btn-primary">Save</button>
                        </div>
                }
            </div>
    </div>


   
