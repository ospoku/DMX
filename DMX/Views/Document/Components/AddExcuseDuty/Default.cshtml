
@model DMX.ViewModels.AddExcuseDutyVM;




<div class="card-body justify-content-md-center">
    <div class="row justify-content-center">
        <div class="col-md-7">


            @using (Html.BeginForm("AddExcuseDuty", "Document", FormMethod.Post))
            {

                <div class="card">
                    <div class="card-header">
                        <h5>Add New Letter</h5>
                        <!--<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>-->
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Reference Number">

                        </div>



                        <div class="form-group ">
                            <input type="text" asp-for="@Model.OperationDiagnosis" name="footer-email" class="form-control" placeholder="Document Source">

                        </div>
                        <div class="form-group ">

                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text">Receipt Date</span></div>


                                <input type="date" asp-for="@Model.DateofDischarge" class="form-control" asp-format="{0:dd/MMM/yyyy}">


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text">Document Date</span></div>
                                <input type="date" asp-for="@Model.DateofDischarge" class="form-control" asp-format="{0:dd/MMM/yyyy}">
                            </div>
                        </div>
                    



                        <div class="form-group">


                            <textarea class=" form-control" asp-for="@Model.Name" type="text" placeholder="Additional Information"></textarea>


                        </div>
    <div class="form-group">
                            <select type="text" id="selectUser" class="select2" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" multiple="multiple"></select>

                        </div>
                        <button class="btn btn-block btn-primary">Save</button>



                    </div>
                </div>
            }


        </div>
    </div>
</div>
