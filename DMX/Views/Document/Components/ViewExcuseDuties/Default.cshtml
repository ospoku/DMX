@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewExcuseDutiesVM>;


<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Excuse Duties</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddExcuseDuty" data-bs-url="@Url.Action("AddExcuseDuty")"><i class="fa fa-fw fa-plus-circle"></i>Add Excuse Duty</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table dataTables_wrapper">
    
      
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Excuse Days</th>
               
                    <th>Diagnosis</th>
                 
                    <th>Date of Discharge</th>
                    
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var Excuse in Model)
                {
                    <tr>
                        <td>@Excuse.Name</td>
            <td>@Excuse.Date</td>
            <td>@Excuse.ExcuseDays</td>
            <td>@Excuse.OperationDiagnosis</td>
            <td>@Excuse.DateofDischarge</td>
                        <td>
                            <div class="text-center">
                                <a asp-action="Card" asp-controller="Document" asp-route-Id="@Excuse.ExcuseDutyId" class="btn btn-primary btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                           
                            </div>
                        </td>
                    </tr>
                }




            </tbody>
        </table>
    </div>

    </div>

        <div class="card-footer">
        </div>
    </div>
