
@model DMX.ViewModels.DocumentCommentVM;

<div class="modal fade" id="CommentLetter" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Comment</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">



        

            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text">Document Content</h5>
                </div>
                <div class="card-block accordion-block">
                    <div id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="accordion-panel">
                            <div class="accordion-heading" role="tab" id="headingOne">
                                <h3 class="card-title accordion-title">
                                    <a class="accordion-msg waves-effect waves-dark" data-toggle="collapse"
                                       data-parent="#accordion" href="#collapseOne"
                                       aria-expanded="true" aria-controls="collapseOne">
                                        @Model.Title
                                    </a>
                                </h3>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                <div class="accordion-content accordion-desc">
                                    <p>
                                        @Model.MemoContent

                                       
                                    </p>
                                </div>
                            </div>
                       
                        </div>

                    </div>
                    <object>
                            <embed src="data:application/pdf;base64, @System.Convert.ToBase64String(@Model.Document)"/>
                            </object>
                        </div>
                </div>

        

        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-header-text">Minutes/Comments</h5>
                </div>
               
                    <div class="card-block accordion-block">
                        <div id="accordion" role="tablist" aria-multiselectable="true">
                           
                            <div class="accordion-panel">
                                @{ int i = 1;}
                                @foreach (var comment in Model.Comments.OrderBy(x=>x.CreatedDate))
                                {
                                    <div class="accordion-heading" role="tab" id="headingOne">

                                        <h3 class="card-title accordion-title">
                                            <a class="accordion-msg waves-effect waves-dark" data-toggle="collapse"
                                               data-parent="#accordion" href="#collapseTwo_@i"
                                               aria-expanded="true" aria-controls="collapseTwo">
                                                @comment.CreatedBy <small class="fa-pull-right">

                                                    <time class="timeago" datetime="@comment.CreatedDate.Value.ToString("F")"></time>

                                                </small>
                                            </a>
                                        </h3>
                                    </div>

                                    <div id="collapseTwo_@i" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="accordion-content accordion-desc">
                                            <p>
                                                @comment.Message
                                            </p>
                                        </div>
                                    </div>
                                    i++;
                                }
                                </div>
                            
                            </div>

                    </div>
                
                </div>

        </div>
        <div class="col-lg-12">

            @using (Html.BeginForm("DocumentComment", "Document", FormMethod.Post))
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-text">Add Your Comments</h5>
                    </div>
                    <div class="card-block accordion-block">
                        <div id="accordion" role="tablist" aria-multiselectable="true">
                            <div class="accordion-panel">
                                <div class="accordion-heading" role="tab" id="headingOne">
                                    <h3 class="card-title accordion-title">
                                        <a class="accordion-msg waves-effect waves-dark" data-toggle="collapse"
                                           data-parent="#accordion" href="#collapseThree"
                                           aria-expanded="true" aria-controls="collapseThree">

                                        </a>
                                    </h3>
                                </div>
                                <div id="collapseThree" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                    <div class="accordion-content accordion-desc">
                                        <textarea class="form-control" asp-for="@Model.NewComment">
                                                                
                                                            </textarea>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>


                <div class="form-group">
                    <button class="btn btn-block btn-primary btn-sm">Save</button>
                </div>
            }

            </div>
    </div>
