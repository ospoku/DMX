
@model DMX.ViewModels.AddPatientVM;


<div class="modal fade" id="AddPatient" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Patient</h6>
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">

            @using (Html.BeginForm("AddPatient", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

               

                        <div class="form-group">
                            <input type="text" asp-for="@Model.ReferenceNumber" class="form-control" placeholder="Reference Number">

                        </div>



                        <div class="form-group ">
                            <input type="text" asp-for="@Model.Description" name="footer-email" class="form-control" placeholder="Document Source">

                        </div>
                        <div class="form-group ">

                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text">Receipt Date</span></div>


                                @*<input type="date" asp-for="@Model.ReceiptDate" class="form-control" asp-format="{0:dd/MMM/yyyy}">*@


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text">Document Date</span></div>
                                @*<input type="date" asp-for="@Model.DocumentDate" class="form-control" asp-format="{0:dd/MMM/yyyy}">*@
                            </div>
                        </div>
                        <div class="form-group">
                            <select type="text" id="selectPatientUser" class="select2 form-control" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" multiple="multiple"></select>

                        </div>



                        <div class="form-group">


                            <textarea class=" form-control" asp-for="@Model.Description" type="text" placeholder="Additional Information"></textarea>


                        </div>

                        <button class="btn btn-block btn-primary">Save</button>



            
            }


        </div>
    </div>
</div>
