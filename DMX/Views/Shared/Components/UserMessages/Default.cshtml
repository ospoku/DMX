@model IEnumerable<DMX.ViewModels.UserMessagesVM>

<a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button"
   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="fas fa-envelope fa-fw"></i>
    <!-- Counter - Messages -->
    <span class="badge badge-danger badge-counter">7</span>
</a>
<!-- Dropdown - Messages -->
<div class="dropdown-list dropdown-menu dropdown-menu-right"
     aria-labelledby="messagesDropdown">
    <h6 class="dropdown-header">
        Message Center
    </h6>
    @foreach (var message in Model)
    {
        <button class="message dropdown-item d-flex align-items-center"  asp-action="UpdateMessage" asp-controller="Message">
            <div class="dropdown-list-image mr-3">
            <img class="rounded-circle" src="img/undraw_profile_1.svg"
                 alt="...">
            <div class="status-indicator bg-success"></div>
        </div>
        <div class="font-weight-bold">
            <div class="text-truncate">
               @message.Body
            </div>
                <div class="small text-gray-500"><time class="timeago" datetime="@message.CreatedDate.ToString("F")"></time></div>
        </div>
    </button>
    }
  
    
    
    <a class="dropdown-item text-center small text-gray-500" href="#">Read More Messages</a>
</div>
                      
