@using DMX.DataProtection
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.AddLeaveVM>;





<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Annual Leave</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddLeave" data-bs-url="@Url.Action("AddLeave")"><i class="fa fa-fw fa-plus-circle"></i>Add Leave</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="dataTables_wrapper">
                <thead>
                    <tr>
                       
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Username</th>  
                        <th>Username</th>   
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var leave in Model)
                {
                    <tr>
                        
                          <td>@leave.LeaveId</td>
                        <td> @leave.From</td>

                        <td>@leave</td>
                        <td>@leave.To</td>
                           <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-sm btn-rounded btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Select Action
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                        <button data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("EditLeave")" class="dropdown-item-custom" data-bs-target="#EditLeave"><i style="width:15px; height:15px" class=" fa fa-edit mr-3"></i>Edit</button>
                                        <button class="dropdown-item-custom" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("DetailLeave", new { Id = @Encryption.Encrypt(leave.LeaveId) })" data-bs-target="#Detail"><i style="width:15px;height:15px" class="fa fa-info mr-3"></i>Detail</button>
                                        <a class="dropdown-item-custom" asp-action="PrintProfile" asp-controller="Document" asp-route-Id="@Encryption.Encrypt(leave.LeaveId)"><i style="width:15px; height:15px" class="fa fa-print mr-3"></i>Print</a>
                                        <button type="button" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("ClientProfile")" class="dropdown-item-custom" data-bs-target="#ClientProfile"><i style="width:15px; height:15px" class="fa fa-comments mr-3"></i>Comment</button>
                                        <form asp-action="DeleteClient" asp-route-Id="" onsubmit="return jQueryAjaxDeleteLeave(this);">
                                            <button type="submit" class="dropdown-item-custom"><i style="width:15px; height:15px" class="fa fa-trash mr-3"></i>Delete</button>
                                        </form>
                                    </div>
                                </div>

                            </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>
