
@model DMX.ViewModels.AddCashLimitVM

<div class="slide-panel" data-panel="cashPanel" id="cashPanel">
    <div class="card">

        
            <div class="card-header">

                <h6 class="d-inline">Add Cash Limit</h6>
                <button id="btnCloseCash" data-close="cashPanel" type="button" name="nCloseCashPanel"  class="d-line btn btn-sm btn-outline-danger fa-pull-right">X</button>
            </div>
             @using (Html.BeginForm("AddCashLimit", "Settings", FormMethod.Post))
            {
            <div class="card-body">
                <div class="input-group">
                    <div class="input-group-text">
                        <i class="fas fa-money"></i>
                    </div>
                    <div class="did-floating-label-content">
                        <input class="did-floating-input" type="number" step="0.0001" asp-for="@Model.Amount" id="txtAddCashLimit"   placeholder="" />
                        <label class="did-floating-label" for="txtAddCashLimit">Amount</label>
                    </div>
                    </div>
                    
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-block btn-primary">Save</button>
                        </div>
                }
            </div>
    </div>


   
