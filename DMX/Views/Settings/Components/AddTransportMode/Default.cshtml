
@model DMX.ViewModels.AddTransportModeVM;

<div class="slide-transport-panel" id="transportPanel">
    <div class="card">
        <div class="card-header">
                <h6 class="d-inline">Add Transport Mode</h6>
            
            <button id="closeTransportPanel" type="button"  class="d-line btn btn-sm btn-outline-danger fa-pull-right">X</button>

        </div>
             @using (Html.BeginForm("AddTransportMode", "Settings", FormMethod.Post))
            {
            <div class="card-body">
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Name" id="txtAddTransportName"  class="did-floating-input"  required/>
                        <label class="did-floating-label" for="txtAddTransportName">Name</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Code"id="txtAddTransportCode" class="did-floating-input"  required/>
                        <label class="did-floating-label" for="txtAddTransportCode">Code</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Description"  id="txtAddTransportDescription" class="did-floating-input" placeholder="" required/>
                        <label class="did-floating-label" for="txtAddTransportDescription">Description</label>
                    </div>
                   
                    </div>

                    <div class="card-footer"><button class="btn btn-block btn-primary">Save</button></div>
                }
            </div>
    </div>


