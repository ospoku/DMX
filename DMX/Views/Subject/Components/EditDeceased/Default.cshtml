
@model DMX.ViewModels.EditTeacherVM;

<div class="modal fade" id="EditDeceased" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Edit Deceased</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">


                        @using (Html.BeginForm("EditDeceased", "Deceased", FormMethod.Post, new {id="editDeceasedForm" } ))
                        {
                            
                           
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Deceased" class="did-floating-input" placeholder="" required/>
                        <label class="did-floating-label">Deceased</label>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="did-floating-label-content">
                                <input type="text" asp-for="@Model.FolderNo" class="did-floating-input" placeholder="" required/>
                                <label class="did-floating-label">Folder No</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="did-floating-label-content">
                                <input type="text" asp-for="@Model.TagNo" class="did-floating-input" placeholder="" required/>
                                <label class="did-floating-label">Tag No</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="btn-group-sm">
                         @foreach(var dead in Model.DeceasedTypes )
                         {
                               
                                <label class=" btn btn-sm btn-outline-primary">

                                    <input type="radio" asp-for="@Model.DeceasedTypeId"  class="option-input radio" value="@dead.Value" id="Dead@(dead)"  required="required"/>
                                    @dead.Text
                                </label>

                         }
                  
                            </div>

                        </div>

                    </div>
                  
                        <div class="did-floating-label-content">
                        <input class="did-floating-input vh-15" asp-for="@Model.Diagnoses" placeholder="" required/>
                            <label class="did-floating-label">Final Diagnoses</label>
                 
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.WardInCharge" class="did-floating-input" placeholder="" required />
                        <label class="did-floating-label">In-Charge</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Depositor" class="did-floating-input" placeholder="" required>
                        <label class="did-floating-label">Depositor</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.DepositorAddress" class="did-floating-input" placeholder="" required>
                        <label class="did-floating-label">Depositor Address</label>
                    </div>

                    
                    <div class="did-floating-label-content">
                        <input type="text" class="did-floating-input" asp-for="@Model.Description"  placeholder="" />
                  
                        <label class="did-floating-label">Additional Information</label>
                    </div>
                        
                        <div class="did-floating-label-content">
                        <select id="selectDeceasedUser"  class="did-floating-select" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers"></select>
                        <label class="did-floating-label">Select Users</label>
                    </div>
             


                          

                            <button id="btnEditDeceased" type="button" class="btn btn-block btn-primary">Save</button>

                        }
                    </div>
                            </div>
                        </div>
                        </div>
   <script>
        $(document).ready(function ()
        {
       const editDeceasedFormSelector = "#editDeceasedForm";
        $('#selectDeceasedUser').select2({ dropdownParent: $('#EditDeceased') });
   
         document.getElementById("btnEditDeceased").addEventListener("click", function (event) {
            event.preventDefault();

            const form = document.querySelector(editDeceasedFormSelector);
                 if (!form.checkValidity()) {
                form.reportValidity(); // Display browser validation messages
                return; // Stop further execution if validation fails
            }

            // Validate fields

            // Show error if invalid
            // Confirm save
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you really want to update this record?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, save it!'
            }).then((result) => {
                if (result.isConfirmed) 
                {
                    form.submit()
                }     
            });
              
        });
        
    });
                

</script>

                     