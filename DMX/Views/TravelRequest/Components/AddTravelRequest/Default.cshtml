
@model DMX.ViewModels.AddTravelRequestVM;

<div class="modal fade" id="AddTravelRequest" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Travel Request</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
             @using (Html.BeginForm("AddTravelRequest", "TravelRequest", FormMethod.Post))
            {
               
            <div class="modal-body">
            
                    <div class="did-floating-label-content">
                        <select id="selectTravelType1" type="select" asp-for="@Model.TravelTypeId" asp-items="@Model.TravelTypes" class="did-floating-select" placeholder="" required></select>
                        <label class="did-floating-label">Select Travel Type</label>
                    </div>
                    <div class="did-floating-label-content">
                            <input type="text" asp-for="@Model.PurposeofJourney"  class="did-floating-input" placeholder="" required/>
                            <label class="did-floating-label">Purpose</label>
                    </div>
                    <fieldset class="fieldset border-0">
                        <legend class="legend">Select Transport Mode</legend>
                        @foreach (var mode in Model.TransportModes)
                        {

                            <label class=" btn btn-sm btn-outline-primary">

                                <input type="radio" asp-for="@Model.TransportModeId" class="option-input radio" value="@mode.Value" id="Mode@(mode)" />
                                @mode.Text
                            </label>

                        }
                    </fieldset>

                    <div class="row">
                        <div class="col">
                    <div class="did-floating-label-content">


                        <input type="date" asp-for="@Model.StartDate" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}" required />
                        <label class="did-floating-label">Start Date</label>

                    </div>
                    </div>
                    <div class="col">

                            <div class="did-floating-label-content">


                                <input type="date" asp-for="@Model.EndDate" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}" required />
                                <label class="did-floating-label">End Date</label>

                            </div>
                            </div>
                            <div class="col">
                            <div class="did-floating-label-content">
                                <input type="date" asp-for="@Model.DateofReturn" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}" required />
                                <label class="did-floating-label">Date of Return</label>

                            </div>
                    </div>
                       
                            </div>
                     
                        
                    
                  
                    <div class="did-floating-label-content">

                        <input class="did-floating-input" asp-for="@Model.AdditionalNotes" type="text" placeholder="" required/>
                        <label class="did-floating-label">AdditionalNotes</label>
                        </div>
                   
                      <div class="did-floating-label-content">
                            <select id="selectUserTravelRequest" class="did-floating-select" type="select"  asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" placeholder="" required></select>
                        <label class="did-floating-label">Select Approver(s)</label>
                      </div>
                    <div class="did-floating-label-content">
                        <select id="selectTravelType2" type="select" asp-for="@Model.TravelTypeId" asp-items="@Model.TravelTypes" class="did-floating-select" placeholder="" required></select>
                        <label class="did-floating-label">Select Travel Type</label>
                    </div>

                        <button class="btn btn-block btn-primary">Save</button>
            
        
            </div>
         
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#selectUserTravelRequest').select2({ dropdownParent: $('#AddTravelRequest') });
        $('#selectTravelType1').select2({ dropdownParent: $('#AddTravelRequest') });
          $('#selectTravelType2').select2({ dropdownParent: $('#AddTravelRequest') });
        $('#selectDept').select2({ dropdownParent: $('#AddTravelRequest') });
        

    });
</script>