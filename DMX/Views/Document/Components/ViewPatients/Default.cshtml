@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewPatientsVM>;


<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Patients</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddPatient" data-bs-url="@Url.Action("AddPatient")"><i class="fa fa-fw fa-plus-circle"></i>Add Patient</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table dataTables_wrapper">
    
       
            <thead>
                <tr>
                   <th>Date</th>
                    <th>Patient Name</th>
                    
                    <th>Folder Number</th>
                    <th>Final Diagnoses</th>
                    <th>Other Fees</th>
                    <th>WardInCharge</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.Date</td>
                        <td>@patient.PatientName</td><td>@patient.FolderNo</td>
                        <td>@patient.FinalDiagnoses</td>
                        <td>@patient.OtherFees</td>
                        <td>@patient.WardInCharge</td>
                        <td>
                            <div class="text-center">
                                <a asp-action="DetailPatient" asp-controller="Document" asp-route-Id="@patient.PatientId" class="btn btn-primary btn-sm btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>   
                            <a asp-action="DetailPatient" asp-controller="Document" asp-route-Id="@patient.PatientId" class="btn btn-primary btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                                    <a asp-action="DetailPatient" asp-controller="Document" asp-route-Id="@patient.PatientId" class="btn btn-primary btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                                            <a asp-action="DetailPatient" asp-controller="Document" asp-route-Id="@patient.PatientId" class="btn btn-primary btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                           
                            </div>
                        </td>
                    </tr>
                }




            </tbody>
        </table>
    </div>
    </div>
    <div class="card-footer">
    </div>
</div>