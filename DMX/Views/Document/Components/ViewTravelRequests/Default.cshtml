@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewTravelRequestsVM>;



<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Clients</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddMemo" data-bs-url="@Url.Action("AddMemo")"><i class="fa fa-fw fa-plus-circle"></i>Add Memo</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="dataTables_wrapper" id="dtMemo">
                <div class="card-body">
            <table class="table" id="dataTable">
                <thead>
                    <tr>
                       
                  <tr><th>Date</th>
                    <th>Ref.No</th>
                    <th>Name</th>
                    <th>Rank</th>
               <th>Dept</th>
                    <th>Con.Fee</th>
                 
                    <th>Travel Expenses</th>
                    <th>Departure</th>
                    <th>Return</th>
                    <th>Absent</th>
                    <th>Rate</th>
                    <th>Fuel</th>
                    <th>Amt</th>
                    <th>Purpose</th>
                    <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var travel in Model)
                {
                    <tr>
                        
                          <td>@travel.ReferenceNumber</td>
                        <td> @travel.AmountDue</td>

                        <td>@travel.DateofReturn.ToString("yyyy-MM-dd")</td>
                        <td>@travel.DepartureDate.ToString("yyyy-MM-dd")</td>
                           <td>
                            <div class="text-center">
                                <a asp-action="DetailTravelRequest" asp-controller="Document" asp-route-Id="@travel.TravelRequestId" class="btn btn-sm btn-primary  btn-circle"><i class="fa fa-sm fa-info text-white"></i></a>
                                <a asp-action="EditTravelRequest" asp-controller="Document" asp-route-Id="@travel.TravelRequestId" class="btn  btn-sm btn-warning btn-circle"><i class="fa fa-sm fa-edit text-white"></i></a>
                                <a asp-action="CommentTravelRequest" asp-controller="Document" asp-route-Id="@travel.TravelRequestId" class="btn btn-sm btn-circle btn-secondary"><i class="fa fa-sm fa-comments text-white"></i></a>
                                <a asp-action="Download" asp-controller="Document" type="submit" asp-route-Id="@travel.TravelRequestId" class="btn btn-sm btn-dark btn-circle"><i class="fa fa-sm fa-cloud-download-alt text-white"></i></a>
                                <a asp-action="Card" asp-controller="Document" asp-route-Id="@travel.TravelRequestId" class="btn btn-sm btn-success btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                                <a asp-action="UpdateTravelRequest" asp-controller="Document" asp-route-Id="@travel.TravelRequestId" class="btn btn-sm btn-circle btn-danger"><i class="fa fa-sm fa-trash text-white"></i></a>
                            </div>

                        </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
</div>
