

@{
    Layout = null;
}

@model DMX.ViewModels.MemoCommentVM;

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
   
    <link href="~/ospapps/timeline.css" rel="stylesheet" />
</head>


<body>
    <div class="border-dark">
        <div class="row border-dark">
            <div class="col-md-3"></div><div class="col-md-6"><h4 class="text-center">BOLGATANGA REGIONAL HOSPITAL</h4></div><div class="col-md-3"></div></div>
        </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Timeline</h6>
                        <div id="content">
                            <ul class="timeline">
                                @foreach (var comment in Model.Comments)
                                {
                                    <li class="event" data-date="@comment.CreatedDate">
                                        <h3>@comment.CreatedBy</h3>
                                    <p>@comment.Message</p>
                                </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>

<script type="text/javascript">
    
        window.print();
        setTimeout("closePrintView()", 3000);
    
    $(function closePrintView() {
        document.location.href = 'somewhere.html';
    });
</script>
</body>
</html>