@using DMX.Constants
@using DMX.DataProtection
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService auth
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewPettyCashVM>;




<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Cash Till</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddPettyCash" data-bs-url="@Url.Action("AddPettyCash")"><i class="fa fa-fw fa-plus-circle"></i>Add Petty Cash</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table dataTables_wrapper">
        
                <thead>
                    <tr>
                       
                            <th>SN</th>
                            <th>RefN</th>
                            <th>Date</th>
                  
                    <th>Purpose</th>
                    <th>Amount</th>
                    <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var petty in Model)
                {
                        <tr>
                            <td></td>
                        <td>@petty.ReferenceNumber</td>
                        <td>@petty.CreatedDate?.ToString("dd-MMM-yyyy")</td>
                         
                        <td>@petty.Purpose </td>

                        <td>@petty.Amount</td>
                       
                           <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-sm btn-rounded btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Select Action
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                        @if (( await auth.AuthorizeAsync(User,Permissions.Modules.EditPettyCash)).Succeeded)
                                        { <button data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("EditPettyCash", new {Id=@Encryption.Encrypt(petty.PettyCashId)})" class="dropdown-item-custom" data-bs-target="#EditPettyCash"><i style="width:15px; height:15px" class=" fa fa-edit mr-3"></i>Edit</button>
                                        }
                                       
                                        @if (( await auth.AuthorizeAsync(User,Permissions.Modules.PrintPettyCash)).Succeeded)
                                        { <a class="dropdown-item-custom" asp-action="PrintProfile" asp-controller="Client" asp-route-Id="@Encryption.Encrypt(petty.PettyCashId)"><i style="width:15px; height:15px" class="fa fa-print mr-3"></i>Print</a>
                                        }
                                        @if (( await auth.AuthorizeAsync(User,Permissions.Modules.CommentPettyCash)).Succeeded)
                                        {
                                              <button type="button" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("CommentPettyCash", new { Id = @Encryption.Encrypt(petty.PettyCashId) })" class="dropdown-item-custom" data-bs-target="#ClientProfile"><i style="width:15px; height:15px" class="fa fa-comments mr-3"></i>Comment</button>
                                        } 
                                        @if ((await auth.AuthorizeAsync(User, Permissions.Modules.DeletePettyCash)).Succeeded)
                                        {
                                            <form asp-action="DeleteClient" asp-route-Id="" onsubmit="return jQueryAjaxDelete(this);">
                                                <button type="submit" class="dropdown-item-custom"><i style="width:15px; height:15px" class="fa fa-trash mr-3"></i>Delete</button>
                                        </form>
                                        }
                                    </div>
                                </div>


                        </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>
