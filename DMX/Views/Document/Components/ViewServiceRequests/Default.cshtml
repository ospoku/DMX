
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewServiceRequestsVM>;


<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Clients</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddMemo" data-bs-url="@Url.Action("AddMemo")"><i class="fa fa-fw fa-plus-circle"></i>Add Memo</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="dataTables_wrapper" id="dtMemo">
        <div class="card-body">
            <table class="table" id="dataTable">
                <thead>
                    <tr>
                       
                     <th>Request Number</th>    
                <th>Request Date</th>
                    <th>Requested By</th>
                    <th>Unit</th>
                    <th>Fault(s)</th>
                    <th>Inspected By</th>
                    <th>Action Taken</th>
                        <th>Assignee</th>
                    <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var service in Model)
                {
                    <tr>
                        
                       <td>@string.Format("0:dd/MMM/yyyy", @service.RequestDate)</td>
                        <td>@service.FaultInspectedBy</td>
                        <td>@service.RequestNumber</td>
                        <td>@service.ServiceRequestedBy</td>
                        <td>@service.RequestNumber</td>

                        <td>@service.ActionToBeTaken</td>
                        <td>
                            <div class="text-center">
                                <a asp-action="DetailServiceRequest" asp-controller="Document" asp-route-Id="@service.ServiceRequestId" class="btn btn-sm btn-primary  btn-circle"><i class="fa fa-sm fa-info text-white"></i></a>
                                <a asp-action="EditServiceRequest" asp-controller="Document" asp-route-Id="@service.ServiceRequestId" class="btn  btn-sm btn-warning btn-circle"><i class="fa fa-sm fa-edit text-white"></i></a>
                                <a asp-action="CommentServiceRequest" asp-controller="Document" asp-route-Id="@service.ServiceRequestId" class="btn btn-sm btn-circle btn-secondary"><i class="fa fa-sm fa-comments text-white"></i></a>
                                <a asp-action="Download" asp-controller="Document" type="submit" asp-route-Id="@service.ServiceRequestId" class="btn btn-sm btn-dark btn-circle"><i class="fa fa-sm fa-cloud-download-alt text-white"></i></a>
                                <a asp-action="Card" asp-controller="Document" asp-route-Id="@service.ServiceRequestId" class="btn btn-sm btn-success btn-circle"><i class="fa fa-sm fa-print text-white"></i></a>
                                <a asp-action="UpdateServiceRequest" asp-controller="Document" asp-route-Id="@service.ServiceRequestId" class="btn btn-sm btn-circle btn-danger"><i class="fa fa-sm fa-trash text-white"></i></a>
                            </div>

                        </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
</div>
