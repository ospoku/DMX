@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-pills nav-fill gap-2 p-1 small bg-primary rounded-5 shadow-sm" id="pillNav2" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link rounded-5 active" id="pills-deceased-tab" data-bs-toggle="pill" data-bs-target="#pills-deceased" type="button" role="tab" aria-controls="pills-deceased" aria-selected="true">Deceased Types</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link  rounded-5" id="pills-traveltypes-tab" data-bs-toggle="pill" data-bs-target="#pills-traveltypes" type="button" role="tab" aria-controls="pills-traveltypes" aria-selected="true">Travel Types</button>
        </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link  rounded-5" id="pills-departments-tab" data-bs-toggle="pill" data-bs-target="#pills-departments" type="button" role="tab" aria-controls="pills-departments" aria-selected="true">Departments</button>
    </li>
    
    <li class="nav-item" role="presentation">
        <button class="nav-link  rounded-5" id="pills-fees-tab" data-bs-toggle="pill" data-bs-target="#pills-fees" type="button" role="tab" aria-controls="pills-fees" aria-selected="true">Fees & Charges</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link rounded-5" id="pills-perdiem-tab" data-bs-toggle="pill" data-bs-target="#pills-perdiem" type="button" role="tab" aria-controls="pills-perdiem" aria-selected="true">Per Diems</button>
    </li>
</ul>
<div class="tab-content mt-3" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-deceased" role="tabpanel" aria-labelledby="pills-deceased-tab">@await Component.InvokeAsync("ViewDeceasedTypes")</div>
    <div class="tab-pane fade" id="pills-traveltypes" role="tabpanel" aria-labelledby="pills-traveltypes-tab">@await Component.InvokeAsync("ViewTravelTypes")</div>
    <div class="tab-pane fade" id="pills-departments" role="tabpanel" aria-labelledby="pills-departments-tab">@await Component.InvokeAsync("ViewDepartments")</div>

    <div class="tab-pane fade" id="pills-fees" role="tabpanel" aria-labelledby="pills-fees-tab">@await Component.InvokeAsync("ViewFees")</div>
    <div class="tab-pane fade" id="pills-perdiem" role="tabpanel" aria-labelledby="pills-perdiem-tab">@await Component.InvokeAsync("ViewPerDiems")</div>
</div>


