@using DMX.DataProtection
@using DMX.Constants
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService auth
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewExcuseDutiesVM>;

<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Excuse Duties</h6>
        <button class="btn btn-sm btn-rounded btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddExcuseDuty" data-bs-url="@Url.Action("AddExcuseDuty")">
            <i class="fa fa-fw fa-plus-circle"></i> Add Excuse Duty
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table dataTables_wrapper" id="dataTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Sender</th>
                        <th>Excuse Days</th>
                        <th>Diagnosis</th>
                        <th>Date of Discharge</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Excuse in Model)
                    {
                        <tr>
                            <td>@Excuse.ExcuseDays</td>
                            <td>@Excuse.Sender</td>
                            <td>@Excuse.ExcuseDays</td>
                            <td class="ellipsed-text">@Excuse.OperationDiagnosis</td>
                            <td>@Excuse.DateofDischarge.ToString("yyyy-MMM-dd")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-sm btn-rounded btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Select Action
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                        @if ((await auth.AuthorizeAsync(User, Permissions.Modules.EditExcuseDuty)).Succeeded)
                                        {
                                            <button data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("EditExcuseDuty", new { Id = @Encryption.Encrypt(Excuse.ExcuseDutyId) })" class="dropdown-item-custom" data-bs-target="#EditExcuseDuty">
                                                <i style="width:15px; height:15px" class="fa fa-edit mr-3"></i> Edit
                                            </button>
                                        }
                                        @if ((await auth.AuthorizeAsync(User, Permissions.Modules.CommentExcuseDuty)).Succeeded)
                                        {
                                            <button type="button" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("CommentExcuseDuty", new{Id=Encryption.Encrypt(Excuse.ExcuseDutyId)})" class="dropdown-item-custom" data-bs-target="#CommentExcuseDuty">
                                                <i style="width:15px; height:15px" class="fa fa-comments mr-3"></i> Comment
                                            </button>
                                        }
                                        @if ((await auth.AuthorizeAsync(User, Permissions.Modules.PrintExcuseDuty)).Succeeded)
                                        {
                                            <button class="dropdown-item-custom" onclick="printExcuseDutyIframe('@Encryption.Encrypt(Excuse.ExcuseDutyId)')">
                                                <i style="width:15px; height:15px" class="fa fa-print mr-3"></i> Print
                                            </button>
                                        }
                                        @if ((await auth.AuthorizeAsync(User, Permissions.Modules.DeleteExcuseDuty)).Succeeded)
                                        {
                                            <form asp-action="DeleteClient" asp-route-Id="" onsubmit="return jQueryAjaxDeleteExcuseDuty(this);">
                                                <button type="submit" class="dropdown-item-custom">
                                                    <i style="width:15px; height:15px" class="fa fa-trash mr-3"></i> Delete
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer"></div>
</div>
<iframe id="printFrame" style="display:none;"></iframe>

    <script type="text/javascript">
    function printExcuseDutyIframe(ExcuseDutyId) {
        const printFrame = document.getElementById('printFrame');
        printFrame.src = `/ExcuseDuty/PrintExcuseDuty?Id=${ExcuseDutyId}`;
        printFrame.onload = function () {
            printFrame.contentWindow.focus();
            printFrame.contentWindow.print();
        };
    }
    $(document).ready(function() {
        var table = $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'pdfHtml5',
                    text: 'Export PDF',
                    title: 'Acme Corporation',
                    messageTop: 'Employee Report',
                    exportOptions: {
                        columns: ':visible'
                    },
                    customize: function (doc) {
                        // Add company logo
                        doc.content.splice(0, 0, {
                            alignment: 'center',
                            image: 'data:image/png;base64,YOUR_BASE64_ENCODED_IMAGE',
                            width: 100,
                            margin: [0, 0, 0, 10]
                        });
                        // Add company details
                        doc.content.splice(1, 0, {
                            alignment: 'center',
                            text: 'Acme Corporation\n1234 Elm Street, Springfield, USA\nTel: (555) 123-4567\nEmail: info@acmecorp.com',
                            margin: [0, 0, 0, 10]
                        });
                        // Adjust page margins
                        doc.pageMargins = [10, 10, 10, 10];
                        doc.defaultStyle.fontSize = 10;
                        doc.styles.tableHeader.fontSize = 12;
                        doc.styles.title.fontSize = 14;
                        // Customize footer with page number
                        doc['footer'] = function (currentPage, pageCount) {
                            return {
                                text: 'Page ' + currentPage.toString() + ' of ' + pageCount.toString(),
                                alignment: 'center',
                                margin: [0, 10, 0, 10]
                            };
                        };
                    }
                }
            ]
        });
    });
    
</script>
