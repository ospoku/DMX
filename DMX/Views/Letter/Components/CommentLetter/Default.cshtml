
@model DMX.ViewModels.DocumentCommentVM;



            <header class="modal-header">

                <h6 id="CommentletterLabel">Add Comment</h6>
    <button type="button" onclick="document.getElementById('CommentLetterDialog').close()" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </header>
            <main>

            <div class="container mt-0">
                <!-- Nav pill tabs -->
                    <ul class="nav nav-pills nav-fill gap-2 p-1 small bg-primary rounded-1 shadow-sm" id="memoPillTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link rounded-1 custom-tab active" id="letter-content-pill-tab" data-bs-toggle="pill" data-bs-target="#letter-content-pill" type="button" role="tab" aria-controls="letter-content-pill" aria-selected="true">Memo Content</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link rounded-1 custom-tab" id="comments-pill-tab" data-bs-toggle="pill" data-bs-target="#comments-pill" type="button" role="tab" aria-controls="comments-pill" aria-selected="false">Comments <span class="badge bg-danger">@Model.CommentCount</span></button>

                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link rounded-1 custom-tab" id="new-comment-pill-tab" data-bs-toggle="pill" data-bs-target="#new-comment-pill" type="button" role="tab" aria-controls="new-comment-pill" aria-selected="false">New Comment</button>
                        </li>
                    </ul>

                <!-- Pill tab panes -->
                <div class="tab-content mt-1" id="letterPillTabsContent">
                    <!-- letter Content -->
                    <div class="tab-pane fade active show  p-1" id="letter-content-pill" role="tabpanel" aria-labelledby="letter-content-pill-tab">

                            <iframe src="data:application/pdf;base64,@Convert.ToBase64String(Model.Document)" class="w-100" style="height: 500px;"></iframe>
                        </div>

                    <!-- Comments -->
                    <div class="tab-pane fade p-1" id="comments-pill" role="tabpanel" aria-labelledby="comments-pill-tab">


                            @foreach (var comment in Model.Comments)
                            {
                                <div class="card mb-3">
                                    <div class="card-body d-flex align-items-start">
                                        
                                        <!-- Check if User Picture is available -->
                                        @{
                                            var userPicture = comment.AppUser?.Picture;
                                            var pictureBase64 = userPicture != null ? Convert.ToBase64String(userPicture) : null;
                  
                                            var defaultImagePath = Url.Content("~/images/default-user.png");
                                        }

                                        <!-- User Picture -->
                                        
                                        <img src="@(!string.IsNullOrEmpty(pictureBase64) ? $"data:image/png;base64,{pictureBase64}" : defaultImagePath)"
                                             alt="@comment.AppUser?.Fullname"
                                             class="rounded-circle me-3"
                                             style="width: 40px; height: 40px; object-fit: cover;">


                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <small class="fw-bold">@comment.AppUser?.Fullname</small>
                                                <small class="fa-pull-right">
                                                    <time class="timeago" datetime="@comment.CreatedDate?.ToString("o")"></time>
                                                </small>
                                            </div>
                                           <p> @Html.Raw(comment.Message)</p>
                                        </div>
                                    </div>
                                </div>
                            }
                    </div>
                    <!-- New Comment -->
                    <div class="tab-pane fade p-1" id="new-comment-pill" role="tabpanel" aria-labelledby="new-comment-pill-tab">
                <form method="post" asp-action="Commentletter" asp-controller="letter" id="commentForm">
                    <input type="hidden" asp-for="@Model.MemoId" />
                    
                   

                    <div class="mb-3">
                     
                        <textarea asp-for="@Model.NewComment" class="did-floating-input"></textarea>
                    </div>
                            <button type="submit" class="btn btn-primary">Submit Comment</button>
                            </form> 
            </div>
                </div>
        </div>

  
</main>
    <footer class="modal-footer"></footer>

  