
@using DMX.DataProtection

@model IEnumerable<DMX.ViewModels.ViewDepartmentsVM>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Types</h6>

        <button type="button" id="openDepartmentPanel" class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right"><i class="fa fa-fw fa-plus-circle"></i>Add Department</button>  @* data-bs-toggle="ajax-modal" data-bs-target="#AddDepartment" *@

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class=" table dataTables_wrapper" id="tbViewDepartments">

                <thead>
                    <tr>
                        <th>SN</th>
                        <th>Name</th>
                        
                        <th>Description</th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var type in Model)
                    {
                        <tr>
                            <th></th>
                            <td>@type.Name</td>
                           
                            <td>@type.Description</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop1" type="button" class="btn btn-sm btn-rounded btn-outline-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Select Action
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                        <button data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("EditMemo")" class="dropdown-item-custom" data-bs-target="#EditMemo"><i style="width:15px; height:15px" class=" fa fa-edit mr-3"></i>Edit</button>
                                        <button class="dropdown-item-custom" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("EditService", new { Id = @Encryption.Encrypt(type.Id) })" data-bs-target="#DetailMemo"><i style="width:15px;height:15px" class="fa fa-info mr-3"></i>Detail</button>
                                        <a class="dropdown-item-custom" asp-action="PrintProfile" asp-controller="Client" asp-route-Id="@Encryption.Encrypt(type.Id)"><i style="width:15px; height:15px" class="fa fa-print mr-3"></i>Print</a>
                                        <button type="button" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("ClientProfile")" class="dropdown-item-custom" data-bs-target="#ClientProfile"><i style="width:15px; height:15px" class="fa fa-comments mr-3"></i>Comment</button>
                                        <form asp-action="DeleteClient" asp-route-Id="" onsubmit="return jQueryAjaxDelete(this);">
                                            <button type="submit" class="dropdown-item-custom"><i style="width:15px; height:15px" class="fa fa-trash mr-3"></i>Delete</button>
                                        </form>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>
@await Component.InvokeAsync("AddDepartment")