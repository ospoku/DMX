
@model DMX.ViewModels.EditDocumentVM;


<div class="modal fade" id="AddMemo" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Memo</h6>
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">
                        <div class="card">
                            <div class="card-header">
                                <h5>Edit Document</h5>
                                <!--<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>-->
                            </div>
                            <div class="card-body">

                                @using (Html.BeginForm("EditDocument", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text">Reference Number</span></div>
                                            <input class="form-control" asp-for="@Model.ReferenceNumber" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text ">Document Source</span></div>
                                            <input class="form-control" asp-for="@Model.DocumentSource" type="text" placeholder="Document Source">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text">Receipt Date</span></div>
                                            <input class="form-control js-datepicker"  value="@Model.DateReceived"  type="date" asp-format="{0:dd/MMM/yyyy}" />

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend"><span class="input-group-text">Document Date</span></div>
                                            <input class="form-control  js-datepicker" value="@Model.DocumentDate"  type="date" asp-format="{0:dd/MMM/yyyy}" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">


                                            <select id="selectUser" class="select2 form-control" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" multiple="multiple"></select>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">

                                            <input class=" form-control custom-custom-file-input" id="formFile" name="formFile" type="file" asp-for="UploadFile" />

                                        </div>


                                    </div>

                                    <div class="form-group">


                                        <textarea class="tinymce form-control" asp-for="@Model.AdditionalNotes" type="text" placeholder="Additional Information"></textarea>
                                 

                                    </div>

                                    <button class="btn btn-block btn-primary">Update</button>

                                }
                            </div>
                        </div>
                    </div>
    </div>
                </div>


