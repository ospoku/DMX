@using DMX.Constants
@using DMX.DataProtection
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService auth
@{


    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewDocumentsVM>;


<div id="PlaceHolderHere"></div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Letters/Documents</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" data-bs-toggle="ajax-modal" data-bs-target="#AddLetter" data-bs-url="@Url.Action("AddLetter")"><i class="fa fa-fw fa-plus-circle"></i>Add Letter</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table dataTables_wrapper">
   
                <thead>
                    <tr>
                       
                        <th>RefN</th>
                        <th>Source</th>
                        <th>Receipt Date</th>  
                        <th>Document Date</th>   
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var Document in Model)
                {
                    <tr>
                        
                          <td>@Document.ReferenceNumber</td>
                        <td> @Document.DocumentSource</td>

                        <td>@Document.ReceiptDate.ToString("yyyy-MMM-dd")</td>
                        <td>@Document.DocumentDate.ToString("yyyy-MMM-dd")</td>
                           <td>
                                    <div class="btn-group" role="group">
                                        <button id="btnGroupDrop1" type="button" class="btn btn-sm btn-rounded btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Select Action
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                            @if (( await auth.AuthorizeAsync(User,Permissions.Modules.DeleteMemo)).Succeeded)
                                        { <button data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("EditLetter")" class="dropdown-item-custom" data-bs-target="#EditLetter"><i style="width:15px; height:15px" class=" fa fa-edit mr-3"></i>Edit</button>
                                        }
                                         @if (( await auth.AuthorizeAsync(User,Permissions.Modules.DeleteMemo)).Succeeded)
                                        {
                                        <button class="dropdown-item-custom" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("DetailLetter", new { Id = @Encryption.Encrypt(Document.LetterId) })" data-bs-target="#DetailLettter"><i style="width:15px;height:15px" class="fa fa-info mr-3"></i>Detail</button>
                                        }
                                        @if ((await auth.AuthorizeAsync(User, Permissions.Modules.DeleteMemo)).Succeeded)
                                        {
                                            <a class="dropdown-item-custom" asp-action="Download" asp-controller="Letter" asp-route-Id="@Encryption.Encrypt(Document.LetterId)"><i style="width:15px; height:15px" class="fa fa-print mr-3"></i>Print</a>
                                        }
                                        @if (( await auth.AuthorizeAsync(User,Permissions.Modules.DeleteMemo)).Succeeded)
                                        {
                                            <button type="button" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("CommentLetter") class="dropdown-item-custom" data-bs-target="#ClientProfile"><i style="width:15px; height:15px" class="fa fa-comments mr-3"></i>Comment</button>}
                                       }
                                            @if ((await auth.AuthorizeAsync(User, Permissions.Modules.DeleteMemo)).Succeeded)
                                        {
                                            <form asp-action="DeleteClient" asp-route-Id="" onsubmit="return jQueryAjaxDelete(this);">
                                                <button type="submit" class="dropdown-item-custom"><i style="width:15px; height:15px" class="fa fa-trash mr-3"></i>Delete</button>
                                            </form>}
                                        </div>
                                    </div>

                                </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
</div>
