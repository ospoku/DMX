
@model DMX.ViewModels.AddPatientVM;


<div class="modal fade" id="AddPatient" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Patient</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>

             @using (Html.BeginForm("AddPatient", "Patient", FormMethod.Post, new { enctype = "multipart/form-data"}))
            {
                <div class="modal-body">
                    
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Deceased" class="did-floating-input" placeholder="" required/>
                        <label class="did-floating-label">Deceased</label>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="did-floating-label-content">
                                <input type="text" asp-for="@Model.FolderNo" class="did-floating-input" placeholder="" required/>
                                <label class="did-floating-label">Folder No</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="did-floating-label-content">
                                <input type="text" asp-for="@Model.TagNo" class="did-floating-input" placeholder="" required/>
                                <label class="did-floating-label">Tag No</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="btn-group-sm">
                         @foreach(var dead in Model.DeceasedTypes )
                         {
                               
                                <label class=" btn btn-sm btn-outline-primary">

                                    <input type="radio" asp-for="@Model.DeceasedTypeId"  class="option-input radio" value="@dead.Value" id="Dead@(dead)" />
                                    @dead.Text
                                </label>

                         }
                  
                            </div>

                        </div>

                    </div>
                  
                        <div class="did-floating-label-content">
                        <input class="did-floating-input vh-15" asp-for="@Model.Diagnoses" placeholder="" required/>
                            <label class="did-floating-label">Final Diagnoses</label>
                 
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.WardInCharge" class="did-floating-input" placeholder="" required />
                        <label class="did-floating-label">In-Charge</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.Depositor" class="did-floating-input" placeholder="" required>
                        <label class="did-floating-label">Depositor</label>
                    </div>
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.DepositorAddress" class="did-floating-input" placeholder="" required>
                        <label class="did-floating-label">Depositor Address</label>
                    </div>

                    
                    <div class="did-floating-label-content">
                        <input type="text" class="did-floating-input" asp-for="@Model.Description"  placeholder="" />
                  
                        <label class="did-floating-label">Additional Information</label>
                    </div>
                        
                        <div class="did-floating-label-content">
                        <select id="selectPatientUser" class="did-floating-select" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" required="required"></select>
                        <label class="did-floating-label">Select Users</label>
                    </div>
                </div>


                <div class="modal-footer"><button type="submit" class="btn btn-block btn-primary">Save</button></div>
            }
        </div>
</div>
</div>
<script>
    $(document).ready(function ()
    {
        $('#selectPatientUser').select2({ dropdownParent: $('#AddPatient') });
    
    });
   

    
</script>