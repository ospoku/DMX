
@model DMX.ViewModels.EditClassroomVM;

<div class="modal fade" id="EditMemo" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Edit Memo</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">


                        @using(Html.BeginForm("EditMemo", "Memo", FormMethod.Post,new{id="editMemoForm"}))
                        {
                            <div class="did-floating-label-content">
                                <input class="did-floating-input" asp-for="@Model.Title" placeholder="" />
                                <label class="did-floating-label">Title</label>
                            </div>
                     <div class="form-group">     
                    <textarea id="MemoContent" class="did-floating-input" type="text"  asp-for="@Model.Content" required="required" style="min-height:300px"></textarea>
                    </div>
                            <div class="did-floating-label-content">
                                    <select id="selectUser" class="did-floating-select" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" multiple ></select>
                               <label class="did-floating-label">Select User(s)</label>
                            </div>
                       
                                <button id="btnEditMemo" class="btn btn-block btn-primary">Update</button>         
      }
     </div>
     </div>
     </div>
     </div>
<script>
    $(document).ready(function () {
        // Initialize Select2 for dropdowns within the modal
        const modalSelector = '#EditMemo';
        const memoContentSelector = '#MemoContent';

        $('#selectUser').select2({
            dropdownParent: $(modalSelector)
        });

        // Initialize TinyMCE when the modal is shown
        $(modalSelector)
            .off('shown.bs.modal') // Prevent duplicate event handlers
            .on('shown.bs.modal', function () {
                if (!tinymce.get(memoContentSelector.substring(1))) { // Initialize only if not already initialized
                    try {
                        tinymce.init({
                            selector: memoContentSelector,
                            menubar: true,
                            toolbar: 'undo redo | bold italic underline | alignleft aligncenter alignright',
                            height: 300 // Default height for consistency
                        });
                    } catch (e) {
                        console.error('Error initializing TinyMCE:', e);
                    }
                }
            });

        // Remove TinyMCE instance on modal close
        $(modalSelector)
            .off('hidden.bs.modal') // Prevent duplicate event handlers
            .on('hidden.bs.modal', function () {
                try {
                    tinymce.remove(memoContentSelector);
                } catch (e) {
                    console.error('Error removing TinyMCE:', e);
                }
            });
   
        
         const formSelector='#editMemoForm';
      // $('#usersEditExcuseDuty').select2({
      //     dropdownParent: $('#EditMemo')
      // });
      document.getElementById("btnEditMemo").addEventListener("click", function (event) {
            event.preventDefault();

            const form = document.querySelector(formSelector);
                 if (!form.checkValidity()) {
                form.reportValidity(); // Display browser validation messages
                return; // Stop further execution if validation fails
            }

            // Validate fields

            // Show error if invalid


            // Confirm save
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you really want to update this record?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, save it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });

        });
</script>


