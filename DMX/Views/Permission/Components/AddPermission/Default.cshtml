
@model DMX.ViewModels.AddPermissionVM

<div class="slide-panel" data-panel="permissionPanel" id="permissionPanel">
    <div class="card">

        
            <div class="card-header">

                <h6 class="d-inline">Add Permission</h6>
                <button id="btnClosePermission" data-close="permissionPanel" type="button" name="nClosePermissionPanel"  class="d-line btn btn-sm btn-outline-danger fa-pull-right">X</button>
            </div>
             @using (Html.BeginForm("AddPermission", "Permission", FormMethod.Post))
            {
            <div class="card-body">
                    <div class="did-floating-label-content">
                        <input type="text" asp-for="@Model.ModuleName"  id="txtModule"  class="did-floating-input" placeholder="" />
                        <label class="did-floating-label" for="txtModule">Module</label>
                    </div>
                <div class="did-floating-label-content">
                    <input type="text" asp-for="@Model.ActionName" id="txtAction" class="did-floating-input" placeholder="" />
                    <label class="did-floating-label" for="txtAction">Action</label>
                </div>
                <div class="did-floating-label-content">
                    <input type="text" asp-for="@Model.Description" id="txtDescription" class="did-floating-input" placeholder="" />
                    <label class="did-floating-label" for="txtAction">Description</label>
                </div>

                    
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-block btn-primary">Save</button>
                        </div>
                }
            </div>
    </div>


   
