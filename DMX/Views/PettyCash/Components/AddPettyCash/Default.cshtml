
@model DMX.ViewModels.AddPettyCashVM;


<dialog class=" border-0 rounded py-0 col-md-4" id="AddPettyCashDialog">
   
            <div class="modal-header">

                <h6>Add Petty Cash</h6>
                <button type="button" aria-label="Close" class="btn btn-sm btn-outline-danger" onclick="document.getElementById('AddPettyCashDialog').close()">Close</button>
            </div>
            <div class="modal-body">

            @using (Html.BeginForm("AddPettyCash", "PettyCash", FormMethod.Post, new{id="addPettyCashForm"}))
            { 
                    <div class="did-floating-label-content">
                        <input type="number" step="0.0001" asp-for="@Model.Amount" class="did-floating-input" max="@Model.Maximum" required />
                        <label class="did-floating-label">Amount</label>
                    </div>
                        <div class="did-floating-label-content">
                            <input type="text" asp-for="@Model.Purpose"  class="did-floating-input" placeholder="" required/>
                            <label class="did-floating-label">Purpose</label>
                        </div>
            
                        <select id="selectPettyCashUser" class="dmx-choices did-floating-select"   asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers"></select>
                        
                      
            

                        <button id="btnAddPettyCash" class="btn btn-block btn-primary">Save</button>       
            }
        </div>

</dialog>




