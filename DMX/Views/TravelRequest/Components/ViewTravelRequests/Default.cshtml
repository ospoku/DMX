@using DMX.Constants
@using DMX.DataProtection
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService auth
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DMX.ViewModels.ViewTravelRequestsVM>;





<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary d-inline">Travel Requests</h6>

        <button class="btn btn-sm btn-rounded  btn-outline-primary fa-pull-right" onclick="document.getElementById('AddTravelRequestDialog').showModal()"><i class="fa fa-fw fa-plus-circle"></i>Add Travel Request</button>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table dataTables_wrapper">

                <thead>
                
                       
                  <tr>
                    <th>SN</th>
                 <th>Ref</th>
                    
                    <th>Type</th>
                        <th>Purpose</th>
                    <th>StartDate</th>
                    <th>EndDate</th>
                    <th>Sender</th>
                    <th>Allowance</th>
                    <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                      @foreach (var travel in Model)
                {
                    <tr>
                        <td></td>
                        
                            <td class="ellipsed-text">@travel.ReferenceNumber</td>
                            <td>@travel.TravelType</td>
                        <td class="ellipsed-text">@travel.PurposeofJourney</td>
                            
                            <td class="ellipsed-text">@travel.StartDate.ToString("yyyy-MM-dd")</td>
                        
                        
                        <td class="ellipsed-text">@travel.EndDate.ToString("yyyy-MM-dd")</td>
                            <td class="ellipsed-text">@travel.Name</td>
                            <td>@travel.TotalAllowance</td>
                           <td>
                                        <div class="btn-group" role="group">
                                            <button id="btnGroupDrop1" type="button" class="btn btn-sm btn-rounded btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Select Action
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                @if (( await auth.AuthorizeAsync(User,Permissions.Modules.EditTravelRequest)).Succeeded)
                                        { 
                                            <button data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("EditTravelRequest", new{ Id=@Encryption.Encrypt(travel.TravelRequestId)})" class="dropdown-item-custom" data-bs-target="#EditTravelRequest"><i style="width:15px; height:15px" class=" fa fa-edit mr-3"></i>Edit</button>
                                        }
                                         @if (( await auth.AuthorizeAsync(User,Permissions.Modules.PrintTravelRequest)).Succeeded)
                                        {<a class="dropdown-item-custom" asp-action="PrintTravelRequest" asp-controller="TravelRequest" asp-route-Id="@Encryption.Encrypt(travel.TravelRequestId)"><i style="width:15px; height:15px" class="fa fa-print mr-3"></i>Print</a>
                                        }
                                         @if (( await auth.AuthorizeAsync(User,Permissions.Modules.CommentTravelRequest)).Succeeded)
                                        {<button type="button" data-bs-toggle="ajax-modal" data-bs-url="@Url.Action("CommentTravelRequest", new {Id=Encryption.Encrypt(travel.TravelRequestId)})" class="dropdown-item-custom" data-bs-target="#CommentTravelRequest"><i style="width:15px; height:15px" class="fa fa-comments mr-3"></i>Comment</button>
                                        } 
                                        @if ((await auth.AuthorizeAsync(User, Permissions.Modules.DeleteTravelRequest)).Succeeded)
                                        {
                                                <form asp-action="DeleteClient" asp-route-Id="" onsubmit="return jQueryAjaxDelete(this);">
                                                    <button type="submit" class="dropdown-item-custom"><i style="width:15px; height:15px" class="fa fa-trash mr-3"></i>Delete</button>
                                                </form>
                                        }
                                            </div>
                                        </div>



                                    </td>
                    </tr>
             }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer"></div>
</div>
@await Component.InvokeAsync("AddTravelRequest")