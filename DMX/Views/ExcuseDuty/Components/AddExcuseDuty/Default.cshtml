
@model DMX.ViewModels.AddExcuseDutyVM;




<div class="modal fade" id="AddExcuseDuty" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Excuse Duty</h6>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">


            @using (Html.BeginForm("AddExcuseDuty", "ExcuseDuty", FormMethod.Post, new{id="addExcuseDutyForm"}))
            {

                    <div class="row">
                        <div class="col-md-8">
                    <div class="did-floating-label-content">
                        <input type="text" class="did-floating-input" asp-for="@Model.PatientName" placeholder="" required/>

                        <label class="did-floating-label">Patient Name</label>
                    </div>
                    </div>
                    <div class="col-md-4">
                    <div class="did-floating-label-content">
                        <input type="text" class="did-floating-input" asp-for="@Model.PatientId" placeholder="" required/>

                        <label class="did-floating-label">Patient Id</label>
                    </div>
                   </div>
                   </div>
                    <div class="did-floating-label-content">
                        <input type="text" class="did-floating-input" asp-for="@Model.Diagnosis"  placeholder="" required/>

                        <label class="did-floating-label">Diagnosis</label>
                    </div>
                        <div class="did-floating-label-content">

                        <input type="date" asp-for="@Model.DateofDischarge" class="did-floating-input" asp-format="{0:dd/MMM/yyyy}" />

                        <label class="did-floating-label">Date of Discharge</label>

                    </div> 
                    <div class="did-floating-label-content">
                        <input type="number" class="did-floating-input" asp-for="@Model.ExcuseDays" placeholder="" />
                        <label class="did-floating-label">Excuse Days</label>
                    </div>
                  
              <div class="did-floating-label-content">
                            <select  id="usersAddExcuseDuty"   class="did-floating-select" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers"></select>
                        <label class="did-floating-label"> Select Users</label>  
                        </div>
                   
                      
                      <div class="form-group">
                        <button id="btnAddExcuseDuty" class="btn btn-block btn-primary">Save</button>
                        </div>
            }


        </div>
    </div>
    </div>
    </div>
    <script>
        $(document).ready(function () {
                   const addExcuseDutyFormSelector = '#addExcuseDutyForm';

            $('#usersAddExcuseDuty').select2({
                dropdownParent: $('#AddExcuseDuty') });




            const form = document.querySelector(addExcuseDutyFormSelector);
         document.getElementById("btnAddExcuseDuty").addEventListener("click", function (event) {
            event.preventDefault(); // Prevent immediate submission
                if (!form.checkValidity()) {
                form.reportValidity(); // Display browser validation messages
                return; // Stop further execution if validation fails
            }

            Swal.fire({
                title: 'Are you sure?',
                text: "Do you really want to save this record?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, save it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("addExcuseDutyForm").submit(); // Correct form ID
                }
            });
        });
    });

</script>


  
