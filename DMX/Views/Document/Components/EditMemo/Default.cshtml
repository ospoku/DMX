
@model DMX.ViewModels.EditMemoVM;

<div class="modal fade" id="AddMemo" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">

                <h6>Add Memo</h6>
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-sm btn-outline-danger">Close</button>
            </div>
            <div class="modal-body">


                        @using(Html.BeginForm("EditMemo", "Document", FormMethod.Post))
                        {
                    <div class="card">
                    <div class="card-header">
                        <h5>Edit Memo</h5>
                        <!--<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>-->
                    </div>

                    <div class="card-body">

                            <div class="form-group">
                                <input class="form-control" asp-for="@Model.Title" placeholder="Enter Title of Memo" />
                            </div>
                            <div class="form-group">
                                <div class="card">
                                    <div class="card-header">Edit the contents of your Memo</div>


                                    <textarea class="tinymce form-control card-body" asp-for="@Model.Content" type="text" placeholder="Additional Information"></textarea>
                                   



                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group">


                                    <select id="selectUser" class="select2 form-control" asp-items="@Model.UsersList" asp-for="@Model.SelectedUsers" multiple="multiple"></select>
                                </div>

                            </div>

                            <div class="form-group">
                                <button class="btn btn-block btn-primary">Update</button>
                            </div>
                      
                  
     </div>
     </div>  }
     </div>
     </div>
     </div>